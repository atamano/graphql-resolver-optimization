{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "types": ["node"],
    "lib": ["es2017.object", "esnext"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
